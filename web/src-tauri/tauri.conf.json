{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "clip-that",
  "version": "0.2.3",
  "identifier": "com.example.tauri",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ClipThat",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; media-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "externalBin": ["./binaries/clip_that_script"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI3OEU3NjI3Rjg0MkQ4M0YKUldRLzJFTDRKM2FPSjVjR0Z3QXZNaWFLTGxzQnRwRHZJdTljYlpkRUFmN0hFY1VhVVJUM3B3SjcK",
      "endpoints": [
        "https://gist.githubusercontent.com/Tosvng/8a1348b4fbcbedb7acfce7b6783dc77b/raw/latest.json"
      ]
    }
  }
}
